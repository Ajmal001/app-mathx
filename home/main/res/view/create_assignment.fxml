<?import java.lang.String?>

<AnchorPane prefHeight="550.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.999-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.src.controllers.CreateAssignmentController">
    <children>
        <Button layoutX="210.0" layoutY="500.0" mnemonicParsing="false" text="Create" textAlignment="CENTER">
            <font>
                <Font name="Sawasdee" size="16.0"/>
            </font>
        </Button>

        <HBox layoutX="126.0" layoutY="70.0" prefHeight="29.0" prefWidth="274.0" spacing="10.0">
            <children>
                <TextField prefHeight="25.0" prefWidth="180.0" promptText="Enter Name of Assignment"/>
                <ComboBox prefHeight="25.0" prefWidth="74.0" promptText="Grade">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="1"/>
                            <String fx:value="2"/>
                            <String fx:value="3"/>
                            <String fx:value="4"/>
                            <String fx:value="5"/>
                            <String fx:value="6"/>
                            <String fx:value="7"/>
                            <String fx:value="8"/>
                        </FXCollections>
                    </items>

                </ComboBox>
            </children>
        </HBox>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="150.0" layoutY="20.0" text="Create Assignment">
            <font>
                <Font name="Sawasdee" size="24.0"/>
            </font>
        </Label>
        <ScrollPane layoutX="14.0" layoutY="120.0" prefHeight="366.0" prefWidth="210.0">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="361.0" prefWidth="200.0"/>
            </content>
        </ScrollPane>
        <ScrollPane layoutX="268.0" layoutY="232.0" prefHeight="254.0" prefWidth="218.0">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="249.0" prefWidth="210.0"/>
            </content>
        </ScrollPane>
        <VBox layoutX="268.0" layoutY="115.0" prefHeight="84.0" prefWidth="218.0" spacing="10.0">
            <children>
                <TextField promptText="Enter a Question"/>
                <TextField promptText="Enter Answer"/>
            </children>
        </VBox>
        <Button alignment="BASELINE_RIGHT" contentDisplay="RIGHT" layoutX="340.0" layoutY="187.0" text="Add Question"
                textAlignment="RIGHT"/>
    </children>
</AnchorPane>
